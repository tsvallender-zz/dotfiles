[user]
	name = Trevor Vallender
	email = trevor@tsvallender.co.uk
[core]
	autocrlf = input
	safecrlf = true
	excludesfile = /home/tsv/.gitignore_global
[alias]
	co = checkout
	cm = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p